if status is-interactive
end

# envs
set -gx EDITOR nvim
set -gx VOLTA_HOME $HOME/.volta
set -gx GPG_TTY $(tty)
set -gx XDG_CONFIG_HOME $HOME/.config

# paths
fish_add_path -p $HOME/.local/bin
fish_add_path -p $VOLTA_HOME/bin
fish_add_path -p $HOME/.lmstudio/bin

{{ if eq .chezmoi.os "darwin" }}
fish_add_path -p /opt/homebrew/bin
fish_add_path -p /opt/homebrew/sbin
fish_add_path -a "$HOME/Library/Application Support/JetBrains/Toolbox/scripts"
{{ else }}
fish_add_path -a "$HOME/.local/share/JetBrains/Toolbox/scripts"
{{ end }}

# alias
alias vim="nvim"
alias ls="lsd"
alias ll="lsd -lh"
alias lll="yazi"
alias cat="bat"
alias htop="btop"
alias diff="delta"

# zoxide
zoxide init fish | source

# starship
starship init fish | source

# gpg
gpgconf --launch gpg-agent
